<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<fx:root type="HBox"
         fx:controller="com.todolist.template.TodoItemTemplate" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml/1"
         style="-fx-border-color: grey" alignment="CENTER_LEFT" spacing="15">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Label HBox.hgrow="ALWAYS" prefWidth="250" maxWidth="Infinity" style="-fx-cursor: hand;" fx:id="label"/>
    <Separator HBox.hgrow="ALWAYS" opacity="0"/>
    <FontAwesomeIconView fx:id="pencil" HBox.hgrow="ALWAYS" glyphName="PENCIL" glyphStyle="-fx-cursor: hand;" visible="false" glyphSize="20"/>
    <FontAwesomeIconView fx:id="deleteButton" HBox.hgrow="ALWAYS" glyphName="TRASH_ALT" glyphStyle="-fx-cursor: hand;" visible="false" glyphSize="20" opacity="0.75" fill="#f15b5b" />
</fx:root>